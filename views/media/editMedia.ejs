<h2>Edit Media</h2>

<div class="container w-50 mt-3">

    <img src="" alt=" <%- media.name%>" class="img-fluid" id="my_img" />

    <form action="/media/<%=media.id%>?_method=PUT" method="POST" enctype="multipart/form-data"
        class="mt-3 border p-3 border-primary">
        <div class="form-group">
            <label for="file">Media input</label>
            <input name="uploadedFile" type="file" class="form-control-file" id="file">
        </div>
        <div class="form-group">
            <label for="fileName">Name</label>
            <input name="name" type="text" id="fileName" class="form-control" value="<%=media.name%>" required />
        </div>
        <div class="form-group form-check">
            <input name="active" type="checkbox" id="fileActive" class="form-check-input" <% if (media.active===true){%>
                checked <% } %> />
            <label for="fileActive" class="form-check-label">Active</label>
        </div>
        <button type="submit" class="btn btn-outline-success">Update</button>
    </form>

</div>
<script>
    $("#my_img").attr("src", "<%= media.mediaPath %>");
</script>