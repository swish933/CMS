<h2>All News</h2>

<div class="container mt-3 w-75">
    <table class='table table-hover'>
        <thead class="thead-dark">
            <tr>
                <th>Content</th>
                <th>Category</th>
                <th>Active</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            <% news.forEach(doc => { %>
            <tr>
                <td><%=doc.content%></td>
                <td><%=doc.category%></td>
                <td><%=doc.active%></td>
                <td class="d-flex">
                    <a class="btn btn-sm btn-warning mr-2" href="/news/<%=doc.id%>" role="button">Edit</a>
                    <form action='/news/<%=doc.id%>?_method=DELETE' method="POST">
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>

                </td>
            </tr>
            <% }) %>

        </tbody>
    </table>
</div>